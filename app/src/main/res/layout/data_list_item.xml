<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

  <data>

    <import type="android.view.View" />

    <variable
        name="responseData"
        type="com.hardik.mvvmapp.data.model.response.ApiDataResponse.RowsResponseData" />

  </data>

  <androidx.cardview.widget.CardView
      android:id="@+id/mainLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/_5hsdp"
      android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

      <ImageView
          android:layout_width="@dimen/_56hsdp"
          android:layout_height="@dimen/_56hsdp"
          android:contentDescription="@string/app_name"
          android:imageUrl='@{responseData.imageHref ?? ""}'
          tools:src="@drawable/missing_logo" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_8hsdp"
          android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_bold"
            android:padding="@dimen/_5hsdp"
            android:text='@{responseData.title}'
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12font_ssp"
            tools:text="Beavers" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_bold"
            android:padding="@dimen/_5hsdp"
            android:text='@{responseData.description ?? "Description Not Available"}'
            android:textColor="@color/textColor"
            android:textSize="@dimen/_10font_ssp"
            tools:text="Beavers are second only to humans in their ability to manipulate and change their environment. They can measure up to 1.3 metres long. A group of beavers is called a colony" />

      </LinearLayout>

    </LinearLayout>

  </androidx.cardview.widget.CardView>

</layout>